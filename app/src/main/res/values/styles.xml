<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="top_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="top_text_style2">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="style_control">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_img_control">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="style_chat_control_item">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="style_chat_control_text">
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="style_bg_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">1000sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <style name="voice_icon_text_style">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="call_text_normal">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="call_text_small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="DialPadButtonContainer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="DialPadNumberStyle">

        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="DialPadLetterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="dial_call_style">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">85dp</item>

    </style>

    <style name="top_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/primary</item>
    </style>

    <style name="top_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="chevron_right_style">
        <item name="android:layout_width">15dp</item>
        <item name="android:layout_height">15dp</item>
    </style>

    <style name="setting_text_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="setting_item_style">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="detail_item_style">
        <item name="android:background">@color/white</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:paddingStart">23dp</item>
        <item name="android:paddingEnd">13dp</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <!-- 默认文本框样式 -->

</resources>